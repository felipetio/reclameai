<div class="col-8">
  <h2>Ticket</h2>
  <table class="table table-striped table-sm">
      <thead>
          <th>#</th>
          <th>Created at</th>
          <th>Description</th>
      </thead>
      <tbody>
        <tr>
            <td><%= @ticket.id %></td>
            <td><%= @ticket.created_at.to_formatted_s(:short) %></td>
            <td><%= @ticket.description %></td>
        </tr>
      </tbody>
  </table>

  <%= link_to "Back", tickets_path, class: "btn btn-lg btn-primary" %>
</div>

