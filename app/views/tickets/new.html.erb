<div class="col-8">
  <h2>New ticket:</h2>
  <%= simple_form_for @ticket do |f| %>
    <%= f.error_notification %>
  
    <%= f.association :order %>
    <%= f.input :description, as: :text, required: true %>
  
    <%= f.button :submit, class: "btn-primary" %>
    <%= f.button :button, "Cancel", type: "reset", class: "btn-outline-secondary" %>
  <% end %>
</div>
