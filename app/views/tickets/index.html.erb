<div class="col-8">
  <h2 >Recent tickets</h2>
  <table class="table table-striped table-sm">
      <thead>
          <th>#</th>
          <th>Created at</th>
          <th>Description</th>
          <th>Suspicious</th>
      </thead>
      <tbody>
      <% @tickets.each do |t| %>
          <tr>
              <td><%= t.id %></td>
              <td><%= t.created_at.to_formatted_s(:short) %></td>
              <td><%= t.description %></td>
              <td><%= t.suspicious %></td>
          </tr>
      <% end %>
      </tbody>
  </table>

  <%= link_to "New", new_ticket_path, class: "btn btn-lg btn-primary" %>
</div>

